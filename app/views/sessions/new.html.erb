<h1>Login</h1>

<% if flash[:notice] %>
<h2><%= flash[:notice] %></h2>
<% end %>

<%= form_tag("/sessions") do %>
    <p>
        <%= label_tag "playername", "Player Name:" %>
        <%= text_field_tag "playername" %>
    </p>

    <p>
        <%= label_tag "password", "Password:" %>
        <%= password_field_tag "password" %>
    </p>
        <%= submit_tag "Login" %>
<% end %>